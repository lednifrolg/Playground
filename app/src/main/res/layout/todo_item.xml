  <ImageView
    android:id="@+id/iv_task_badge"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:src="@drawable/circle"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/tv_todo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_gravity="center"
    app:layout_constraintBottom_toBottomOf="@+id/iv_task_badge"
    app:layout_constraintStart_toEndOf="@+id/iv_task_badge"
    app:layout_constraintTop_toTopOf="@+id/iv_task_badge"
    tools:text="This is sample todo item"/>

  <TextView
    android:id="@+id/tv_task_badge_char"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="@style/BadgeCharStyle"
    app:layout_constraintBottom_toBottomOf="@+id/iv_task_badge"
    app:layout_constraintEnd_toEndOf="@+id/iv_task_badge"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="@+id/iv_task_badge"
    app:layout_constraintTop_toTopOf="@+id/iv_task_badge"
    app:layout_constraintVertical_bias="0.5"
    tools:text="Y"/>

</android.support.constraint.ConstraintLayout>